{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "target": "es6",
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,

    "paths": {
      "@/*": ["../../apps/web/src/*", "../../packages/modules/src/*", "../../packages/shared/src/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["custom.d.ts", "**/*.svg"]
}
